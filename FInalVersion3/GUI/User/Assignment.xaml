        </StackPanel>

        <GroupBox x:Name="Gb_case1" Visibility="Collapsed" Header="Första Ärande" BorderThickness="2,2,2,2" Foreground="White" BorderBrush="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Agency FB" FontSize="14" Height="446.2">

            <Grid>

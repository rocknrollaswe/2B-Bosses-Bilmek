                        </Grid.ColumnDefinitions>

                        <StackPanel x:Name="Sp_case1_start" Visibility="Collapsed" Grid.Column="0">
                            <Button x:Name="Bt_case1_start"  Content="Jag har satt igång!" Width="170" Height="35" Foreground="White" FontWeight="Bold" HorizontalAlignment="Left" Click="Bt_case1_start_Click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FFBFC025"/>
                                        <GradientStop Color="#FF852A23" Offset="0.708"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>



                        <StackPanel Grid.Column="1" Width="175">
                            <Button x:Name="Bt_case1_done" Content="Jag är färdig!" Width="170" Height="35" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" Click="Bt_case1_done_click">
                                <Button.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="Black"/>
                                        <GradientStop Color="#FF1B9F47" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>

                    </Grid>
                </StackPanel>













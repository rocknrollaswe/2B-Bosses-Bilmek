    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <!-- här börjar row för ärande 1 och 2 -->
        <!-- här börjar row ärande 1-->
        <!-- Extra meddelande -->

        <StackPanel x:Name="tb_ifnocase_case1" Visibility="Collapsed"  Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="32" Width="350">

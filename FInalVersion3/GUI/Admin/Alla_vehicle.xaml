                                    <GradientStop Color="#FFF57C28" Offset="1"/>
                                </LinearGradientBrush>
                            </ListBox.Background>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,10,5,5" HorizontalAlignment="Left" VerticalAlignment="Center">
